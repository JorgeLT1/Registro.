@page "/C_pagos"
@inject PagosBLL pagosBLL;

<EditForm Model="pagosBLL">
    <div class="card">
        <div class="card-header">
            <h3>Consulta de Ocupaciones</h3>
        </div>
        </div>

        <table class="table table-secondary">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>PagosId</th>
                    <th>Fecha</th>
                    <th>PersonaId</th>
                    <th>Concepto</th>
                    <th>Monto</th>                 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in pagosBLL.GetListst())
                {
                    <tr>
                        <td>@item.PagosId</td>
                        <td>@item.Fecha</td>
                        <td>@item.PersonaId</td>
                        <td>@item.Concepto</td>
                        <td>@item.Monto</td>
                    </tr>
                }
                
            </tbody>
        </table>
</EditForm>




